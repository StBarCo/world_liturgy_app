            <color>Gold or White</color>
        </holy_day>
        <holy_day>
            <id>ashWednesday</id>
            <title>Ash Wednesday</title>
            <type>principal</type>
            <date>
                <special>ashWednesday</special>
            </date>
            <color>Purple or Lent Array</color>
        </holy_day>
        <holy_day>
          <id>motheringSunday</id>
          <title>Mothering Sunday</title>
          <date>
            <special>easter</special>
            <days_before>21</days_before>
          </date>
        </holy_day>
        <holy_day>
            <id>palmSunday</id>
            <title>Palm Sunday</title>
            <date>
                <special>easter</special>
                <days_before>7</days_before>
            </date>
            <color>Red</color>
        </holy_day>
        <holy_day>
            <id>maundyThursday</id>
            <title>Maundy Thursday</title>
            <type>principal</type>
            <date>
                <special>easter</special>
                <days_before>3</days_before>
            </date>
            <color>White</color>
        </holy_day>
        <holy_day>
            <id>goodFriday</id>
            <title>Good Friday</title>
            <type>principal</type>
            <date>
                <special>easter</special>
                <days_before>2</days_before>
            </date>
            <color>None</color>
        </holy_day>
        <holy_day>
            <id>easterEve</id>
            <title>Easter Eve</title>
            <date>
                <special>easter</special>
                <days_before>1</days_before>
            </date>
            <color>None</color>
        </holy_day>
        <holy_day>
            <id>easter</id>
            <title>Easter Day</title>
            <type>principal</type>
            <date>
                <special>easter</special>
            </date>
            <color>Gold or White</color>
        </holy_day>
        <holy_day>
            <id>ascension</id>
            <title>Ascension Day</title>
            <type>principal</type>
            <date>
                <special>easter</special>
                <days_after>40</days_after>
            </date>
            <color>White</color>
        </holy_day>
        <holy_day>
            <id>pentecost</id>
            <title>Day of Pentecost / Whit Sunday</title>
            <type>Principal Feast</type>
            <date>
                <special>pentecost</special>
            </date>
            <color>Red</color>
        </holy_day>
        <holy_day>
            <id>trinity</id>
            <title>Trinity Sunday</title>
            <type>Principal Feast</type>
            <date>
                <special>pentecost</special>
                <days_after>7</days_after>
            </date>
            <color>Gold or White</color>
        </holy_day>
        <holy_day>
            <id>corpusChristi</id>
            <title>The Day of Thanksgiving for the Institution of Holy Communion</title>
            <date>
                <special>pentecost</special>
                <days_after>11</days_after>
            </date>
            <color>White</color>
        </holy_day>
        <holy_day>
            <id>bibleSunday</id>
            <title>Bible Sunday</title>
            <date>
                <month>9</month>
                <day>11</day>
                <type>sundayClosestTo</type>
            </date>
            <color>Green</color>
        </holy_day>
        <holy_day>
            <id>allSaints</id>
            <title>All Saints Day</title>
            <type>principal</type>
            <date>
                <month>11</month>
                <day>1</day>
            </date>
            <color>Gold or White</color>
            <optional_celebration_sunday>true</optional_celebration_sunday>
        </holy_day>
        <holy_day>
            <id>christTheKing</id>
            <title>The Sunday next before Advent</title>
            <date>
                <special>endOfYear</special>
                <days_before>6</days_before>
            </date>
            <color>Red or White</color>
        </holy_day>
        <holy_day>
            <id>namingOfJesus</id>
            <title>The Naming and Circumcision</title>
            <date>
                <month>1</month>
                <day>1</day>
            </date>
            <color>White</color>
        </holy_day>
        <holy_day>
            <id>weekOfPrayer</id>
            <title>The Week of Prayer for Christian Unity</title>
            <date>
                <month>1</month>
                <day>18</day>
            </date>
