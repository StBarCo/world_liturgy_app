            </date>
            <color>Red</color>
        </holy_day>
        <holy_day>
            <id>maryMagdalene</id>
            <title>MaryMagdalene</title>
            <color>White</color>
            <date>
                <month>07</month>
                <day>22</day>
            </date>
        </holy_day>
        <holy_day>
            <id>james</id>
